year = {2004}
}
@article{Gao2004,
abstract = {In this paper, a bilevel programming model for transit network design problem is presented, in which the upper model is a normal transit network design model, and the lower model is a transit equilibrium assignment model. A heuristic solution algorithm based on sensitivity analysis is designed for the model proposed. Finally, a simple numerical example is given to illustrate the application of the model and algorithm and some conclusions are drawn. {\textcopyright} 2003 Elsevier Ltd. All rights reserved.},
