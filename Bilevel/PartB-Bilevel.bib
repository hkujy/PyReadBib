eprint = {2204.10964},
file = {:C\:/Users/phdji/OneDrive - Lancaster University/MyLiterature/MendeleyLiter/2024 - Guarda和Qian - Statistical inference of travelers' route choice preferences with system-level data.pdf:pdf},
issn = {01912615},
journal = {Transportation Research Part B: Methodological},
keywords = {Hypothesis testing,Multinomial logit model,Network models,Normalized gradient descent,Pseudo-convexity,Route choice models,Stochastic user equilibrium,Traffic count data,Travel behavior,Utility function},
number = {December 2023},
pages = {102853},
publisher = {Elsevier Ltd},
title = {{Statistical inference of travelers' route choice preferences with system-level data}},
