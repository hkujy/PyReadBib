journal = {Transportation Research Part B: Methodological},
keywords = {Artificial scarcity,Bilevel pricing problem,Ride-hail,Stackelberg game,Third-party integration},
number = {August},
pages = {103056},
publisher = {Elsevier Ltd},
title = {{Allocation problem in cross-platform ride-hail integration}},
