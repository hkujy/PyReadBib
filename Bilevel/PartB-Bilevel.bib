keywords = {Bi-level model,Gradient projection,Multimodal network,Network capacity,Second-best constraints,Sensitivity analysis-based method},
number = {July},
pages = {276--294},
publisher = {Elsevier Ltd},
title = {{Estimation of urban network capacity with second-best constraints for multimodal transport systems}},
