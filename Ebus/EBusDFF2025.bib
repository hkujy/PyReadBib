file = {:C\:/Users/phdji/OneDrive - Lancaster University/MyLiterature/MendeleyLiter/2020 - Sustainable Cities and Society - Optimization of electric vehicle scheduling with multiple vehicle types in public transport.pdf:pdf},
issn = {22106707},
