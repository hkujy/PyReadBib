issn = {19961073},
journal = {Energies},
keywords = {CCS2,Electric buses,Fast-chargers,Harmonics,Heavy-duty electric vehicles,Impact on the grid,Pantograph,Power quality,Slow-chargers,Ultra-fast charging},
number = {4},
pages = {1--16},
title = {{Impact on the Power Grid Caused via Ultra-Fast Charging Technologies of the Electric Buses Fleet}},
