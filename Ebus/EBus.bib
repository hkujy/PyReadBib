file = {:C\:/Users/phdji/OneDrive - Lancaster University/MyLiterature/MendeleyLiter/2020 - Transportation Research Part C Emerging Technologies - Joint optimization of scheduling and capacity for mixed traffic with auton.pdf:pdf},
