file = {:C\:/Users/phdji/OneDrive - Lancaster University/MyLiterature/MendeleyLiter/2022 - Transportation Research Part C Emerging Technologies - Joint optimization of timetabling, vehicle scheduling, and ride-matching i.pdf:pdf},
issn = {0968090X},
journal = {Transportation Research Part C: Emerging Technologies},
keywords = {Lagrangian relaxation,Mobility-on-demand shuttle bus,Ride-matching,Rolling horizon optimization,Timetabling,Vehicle scheduling},
number = {August 2021},
pages = {103657},
publisher = {Elsevier Ltd},
title = {{Joint optimization of timetabling, vehicle scheduling, and ride-matching in a flexible multi-type shuttle bus system}},
