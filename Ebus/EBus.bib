file = {:C\:/Users/phdji/OneDrive - Lancaster University/MyLiterature/MendeleyLiter/2023 - Transportation Research Part C Emerging Technologies - Application of modular vehicle technology to mitigate bus bunching.pdf:pdf},
issn = {0968090X},
journal = {Transportation Research Part C: Emerging Technologies},
keywords = {Autonomous modular vehicles,Bus bunching,Bus splitting,Modular bus units,Stop skipping},
number = {November 2022},
pages = {103953},
publisher = {Elsevier Ltd},
title = {{Application of modular vehicle technology to mitigate bus bunching}},
