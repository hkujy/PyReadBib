journal = {Computers and Industrial Engineering},
keywords = {Integer programming,Public transport,Timetable coordination,Transfer optimization,Vehicle scheduling},
number = {November 2022},
pages = {109577},
publisher = {Elsevier Ltd},
title = {{Optimizing public transport transfers by integrating timetable coordination and vehicle scheduling}},
