keywords = {Adaptive large neighborhood search,Dispatching plan,Inter-modal transit system,Modular vehicles,Stop-skipping strategy,Uncertain and time-dependent passenger demand},
number = {April},
pages = {104610},
publisher = {Elsevier Ltd},
title = {{Integrated timetabling and vehicle scheduling of an intermodal urban transit network: A distributionally robust optimization approach}},
