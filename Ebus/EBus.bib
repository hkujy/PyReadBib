journal = {Transportation Research Part C: Emerging Technologies},
keywords = {Autonomous public transport vehicles,Energy efficiency,Fluctuated passenger demand,Real-time strategies,Schedule adjustments},
number = {October},
pages = {60--78},
publisher = {Elsevier},
title = {{Real-time schedule adjustments for autonomous public transport vehicles}},
