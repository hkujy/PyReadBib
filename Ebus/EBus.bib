file = {:C\:/Users/phdji/OneDrive - Lancaster University/MyLiterature/MendeleyLiter/2023 - IEEE Transactions on Intelligent Transportation Systems - Optimization of Electric Bus Scheduling for Mixed Passenger and Frei(2).pdf:pdf},
