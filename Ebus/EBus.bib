file = {:C\:/Users/phdji/OneDrive - Lancaster University/MyLiterature/MendeleyLiter/2021 - Transportation Research Part C Emerging Technologies - Competition between shared autonomous vehicles and public transit A case s.pdf:pdf},
issn = {0968090X},
journal = {Transportation Research Part C: Emerging Technologies},
keywords = {Agent-based simulation,Autonomous vehicles,Market competition,Nash equilibrium,Public transportation,Shared mobility-on-demand system},
number = {April},
pages = {103058},
publisher = {Elsevier Ltd},
title = {{Competition between shared autonomous vehicles and public transit: A case study in Singapore}},
