@article{ WOS:000887090400001,
Author = {Yan, Min and Xie, Binglei and Xu, Gangyan},
Title = {Identifying Spatial-Temporal Characteristics and Significant Factors of
   Bus Bunching Based on an eGA and DT Model},
Journal = {APPLIED SCIENCES-BASEL},
