@article{ WOS:000647367800005,
Author = {Ampountolas, Konstantinos and Kring, Malcolm},
Title = {Mitigating Bunching With Bus-Following Models and Bus-to-Bus Cooperation},
Journal = {IEEE TRANSACTIONS ON INTELLIGENT TRANSPORTATION SYSTEMS},
Year = {2021},
Volume = {22},
