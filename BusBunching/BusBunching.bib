@article{ WOS:000731961900001,
Author = {He, Sheng-Xue and He, Jian-Jia and Liang, Shi-Dong and Dong, June Qiong
   and Yuan, Peng-Cheng},
Title = {A Dynamic Holding Approach to Stabilizing a Bus Line Based on the
   Q-Learning Algorithm with Multistage Look-Ahead},
Journal = {TRANSPORTATION SCIENCE},
Year = {2022},
