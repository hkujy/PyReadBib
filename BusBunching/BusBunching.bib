@article{ WOS:000892089500002,
Author = {Vismara, Luca and Saw, Vee-Liem and Chew, Lock Yue},
Title = {Synchronising Bus Bunching to the Spikes in Service Demand Reduces
   Commuters' Waiting Time},
Journal = {COMPLEXITY},
Year = {2022},
Volume = {2022},
Month = {AUG 30},
Abstract = {Bus bunching is ostensibly regarded as a detrimental phenomenon in bus
   systems. We study a bus loop with two bus stops, one regular bus stop
   and one spike bus stop, where bunched buses can outperform staggered
   buses. The spike bus stop models a bus stop connected to a train or
   metro service, where passengers arrive in groups at periodic intervals
   (spikes). We introduce the configuration of synchronised bunched buses,
   where bunched buses wait for the spike in demand. For a wide range of
   parameters, synchronised bunched buses outperform perfectly staggered
   buses in terms of minimising the waiting time of commuters. We present
   an analytical formulation of the average waiting time in the case of
   bunched buses, synchronised bunched buses, and perfectly staggered buses
   with the consideration of different passenger demands, number of buses,
   and bus capacity. We demonstrate the validity of our analytical results
   through an agent-based simulation of the bus loop system.},
