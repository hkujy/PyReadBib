@article{ WOS:000940369000001,
Author = {Shan, Xiaofeng and Wang, Chishe and Zhou, Dongqin},
Title = {Interfering Spatiotemporal Features and Causes of Bus Bunching using
   Empirical GPS Trajectory Data},
