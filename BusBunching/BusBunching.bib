@article{ WOS:001036460500001,
Author = {Liu, Dong and Xiao, Feng and Luo, Jian and Yang, Fan},
Title = {Deep Reinforcement Learning-Based Holding Control for Bus Bunching under
   Stochastic Travel Time and Demand},
Journal = {SUSTAINABILITY},
