@article{ WOS:000985526700017,
Author = {Hu, Shaorong and Zhang, Yuqi and Jin, Yuefei and Dou, Ziqi},
Title = {Dynamic Evolution Simulation of Bus Bunching Affected by Traffic
   Operation State},
